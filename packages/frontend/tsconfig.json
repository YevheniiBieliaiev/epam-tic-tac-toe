{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@helpers": ["helpers"],
      "@validation": ["validation"],
      "@hooks": ["hooks"],
      "@services": ["services"],
      "@store": ["store"],
      "@interfaces": ["common/interfaces"],
      "@enums": ["common/enums"],
      "@types": ["common/types"],
      "@components/*": ["components/*"],
      "@primitives": ["components/primitives"],
      "@providers": ["providers"],
      "@theme": ["theme"],
      "@pages": ["pages"],
      "@svg-icons": ["images/svg"],
      "@locals": ["locals"]
    }
  },
  "include": ["src"]
}
